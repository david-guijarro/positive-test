@model Home

<div class="text-center">
    <h1 class="display-4">Book catalog</h1>
</div>
@if (Model.Books.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Details</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Year</th>
                    <th scope="col">Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model.Books)
                {
                    <tr>
                        <th scope="row"><a href="/details/@book.System.Codename">Detail</a> </th>
                        <td>@book.Name</td>
                        <td>@book.Author</td>
                        <td>@book.ReleaseDate?.Year</td>
                        <td>@book.Category</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        @await Html.PartialAsync("~/Views/Shared/Partials/Pagination.cshtml", Model.Pagination)
    </div>
}

